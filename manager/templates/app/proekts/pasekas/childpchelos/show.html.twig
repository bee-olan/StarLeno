                                {% set action = item.action %}
                                {% if action %}
                                    <div class=" direct-left">
                                        <div class="direct-chat-action ">
                                            <span class="child-tabl-col ">  {{ action.date|date('d-m-Y H:i') }} </span>
{#                                            {{ adminka_pchelomats_action_row(action) }}#}
                                            -------------
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
