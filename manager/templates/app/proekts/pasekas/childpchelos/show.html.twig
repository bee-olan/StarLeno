            {% if childpchelo.content %}
                <div class="card mb-3">
                    <div class="card-body pb-0">
                        ===================================
{#                        {{ childpchelo.content|markdown|purify|adminka_processor }}#}
                        {{ childpchelo.content|markdown|purify }}
                    </div>
                </div>
            {% endif %}

            <div class="card-m card-m--pchelo">
                <div class="card-header-m card-header-m--pchelo ">Сообщения и история выполненных действий</div>
                <div class="card-body">
                    <div class="direct-chat">
                        <div class="direct-chat-messages">
                            {% for item in feed.items %}
                                {% set comment = item.comment %}
                            <div >
                                {% if comment %}
                                    <div class="direct-chat-msg">
                                        <div class="direct-chat-info clearfix">
                                            <span class="direct-chat-name pull-left">{{ comment.author_nike }}</span>
                                            <span class="direct-chat-timestamp pull-right">{{ comment.date|date('d-m-Y H:i:s') }}</span>
                                        </div>
                                        <img class="direct-chat-img" src="{{ gravatar(comment.author_email, 40) }}"
                                             alt="">
                                        <div class="direct-chat-text">
{#                                            {{ comment.text|markdown|purify|adminka_processor }}#}
                                            {{ comment.text|markdown|purify }}
                                            {% if is_granted('manage', comment) %}
                                                <div class="controls mb-0">
                                                    <a href="{{ path('app.proekts.pasekas.childpchelos.comment.edit', {'childpchelo_id': childpchelo.id, 'id': comment.id}) }}"
                                                       class="btn btn-sm btn-outline-secondary">
                                                        <span class="fa fa-pencil"></span>
