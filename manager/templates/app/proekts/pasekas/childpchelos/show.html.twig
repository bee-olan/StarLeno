                    <a href="{{ path('app.proekts.pasekas.childpchelos.assign', {'pchelomatka_id': pchelomatka.id, 'id': childpchelo.id}) }}"
                       class="btn btn-sm btn-default py-0 pull-right"><span class="fa fa-plus"></span></a>
                    Тестер
                </div>

                {% if childpchelo.executors %}
                    <table class="tabl mb-0">
                        <tbody>
                        {% for executor in childpchelo.executors %}
